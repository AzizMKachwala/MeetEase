<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MeetEase" parent="Theme.Material3.DayNight.NoActionBar">
<!--         Customize your light theme here. -->
         <item name="colorPrimary">@color/leafBrown</item>
    </style>

    <style name="Theme.MeetEase" parent="Base.Theme.MeetEase" />

    <style name="button">
        <item name="android:background">@drawable/button_shape</item>
        <item name="backgroundTint">@color/leafBrown</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
    </style>

    <style name="edittext">
        <item name="android:background">@drawable/edittext_shape</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/darkLeafBrown</item>
    </style>
</resources>