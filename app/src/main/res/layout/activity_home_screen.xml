<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#D1B289"
    android:layout_height="match_parent"
    tools:context=".homeScreen.HomeScreenActivity">

    <ImageView
        android:id="@+id/ivNotification"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/img_notifaction"
        app:layout_constraintEnd_toStartOf="@+id/ivSetting"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/_15sdp"/>
    <ImageView
        android:id="@+id/ivSetting"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/img_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/_15sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello anand ,"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        android:textStyle="italic"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/_20sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <LinearLayout
                android:id="@+id/layoutAddReservation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/top_left_layout_shape"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:gravity="start"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:text="Create a new reservation"
                    android:textSize="@dimen/_15sdp"/>
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/_8sdp"
                    android:src="@drawable/img_calendar"/>
            </LinearLayout>

           <LinearLayout
               android:id="@+id/layoutUpcomingMeeting"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="@dimen/_3sdp"
               android:orientation="vertical"
               android:background="@drawable/top_right_layout_shape"
               android:layout_weight="1">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_50sdp"
                   android:padding="@dimen/_5sdp"
                   android:textColor="@color/white"
                   android:gravity="start"
                   android:layout_margin="@dimen/_5sdp"
                   android:layout_marginEnd="@dimen/_3sdp"
                   android:text="Upcoming meeting"
                   android:textSize="@dimen/_15sdp"/>
               <ImageView
                   android:layout_width="@dimen/_50sdp"
                   android:layout_height="@dimen/_50sdp"
                   android:layout_gravity="end"
                   android:layout_margin="@dimen/_8sdp"
                   android:src="@drawable/img_upcoming"/>
           </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:weightSum="2">
            <LinearLayout
                android:id="@+id/layoutPreviousMeeting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/_3sdp"
                android:background="@color/leafBrown">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:padding="@dimen/_5sdp"
                    android:gravity="start"
                    android:layout_margin="@dimen/_6sdp"
                    android:textColor="@color/white"
                    android:text="Previous meeting reservation"
                    android:textSize="@dimen/_14sdp"/>
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/_8sdp"
                    android:src="@drawable/img_list"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutUserProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_3sdp"
                android:background="@color/leafBrown">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:gravity="start"
                    android:layout_margin="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:text="Profile"
                    android:textSize="@dimen/_15sdp"/>
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/_8sdp"
                    android:src="@drawable/image_profile"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:weightSum="2">
            <LinearLayout
                android:id="@+id/layoutContactUs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_left_layout_shape"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_weight="1.5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text="Contact Us"
                    android:textColor="@color/white"
                    android:layout_margin="@dimen/_5sdp"
                    android:textSize="@dimen/_15sdp"/>
                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:src="@drawable/img_support"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutLogout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:orientation="vertical"
                android:background="@drawable/bottom_right_layout_shape"
                android:layout_weight="0.5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="Logout"
                        android:textColor="@color/white"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:textSize="@dimen/_15sdp"/>
                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/_5sdp"
                        android:src="@drawable/img_logout"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/_25sdp"
        app:layout_constraintBottom_toBottomOf="parent"        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginHorizontal="@dimen/_40sdp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/_30sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_28sdp"
        android:layout_marginHorizontal="@dimen/_60sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_35sdp"
        android:text="MeetEase"
        android:textStyle="italic"
        android:textSize="@dimen/_18sdp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">
        <TextView
            android:id="@+id/tvTrans"
            android:layout_width="0dp"
            android:background="#A6000000"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#BC9C74">

                <ImageView
                    android:id="@+id/ivSettingProfile"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/img_back"/>
                <TextView
                    android:id="@+id/tvSettingName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="anand patel"
                    android:textSize="@dimen/_20sdp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/white"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_30sdp"/>
                <LinearLayout
                    android:id="@+id/favoriteRooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/img_favorite"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Favorite Rooms"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_15sdp"
                        app:backgroundTint="@color/gray"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/white"
                    android:layout_marginHorizontal="@dimen/_10sdp"/>
                <LinearLayout
                    android:id="@+id/availableRooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/img_meeting_rooms"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Available Rooms"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_15sdp"
                        app:backgroundTint="@color/gray"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/white"
                    android:layout_marginHorizontal="@dimen/_10sdp"/>
                <LinearLayout
                    android:id="@+id/security"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/img_security"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Security"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_15sdp"
                        app:backgroundTint="@color/gray"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/white"
                    android:layout_marginHorizontal="@dimen/_10sdp"/>
                <LinearLayout
                    android:id="@+id/howToBookRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/img_meeting_room"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="How To Book Room"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_15sdp"
                        app:backgroundTint="@color/gray"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/white"
                    android:layout_marginHorizontal="@dimen/_10sdp"/>
                <LinearLayout
                    android:id="@+id/inviteFriend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/img_invite_friend"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Invite Friend"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_15sdp"
                        app:backgroundTint="@color/gray"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/white"
                    android:layout_marginHorizontal="@dimen/_10sdp"/>
                <LinearLayout
                    android:id="@+id/helpAndSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/img_support"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Help and Support"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_15sdp"
                        app:backgroundTint="@color/gray"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/white"
                    android:layout_marginHorizontal="@dimen/_10sdp"/>
                <LinearLayout
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/img_logout"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Logout"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_15sdp"
                        app:backgroundTint="@color/gray"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/white"
                    android:layout_marginHorizontal="@dimen/_10sdp"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>